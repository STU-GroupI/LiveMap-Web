@using LiveMapDashboard.Web.Models.Poi
@model LiveMapDashboard.Web.Models.Poi.PoiCrudformViewModel

<div class="mt-2 p-4 relative z-10 bg-white border border-gray-200 rounded-xl sm:mt-4 md:p-10 dark:bg-neutral-900 dark:border-neutral-700">
    <div>
        <label class="block mb-2 text-sm font-medium">
            Opening Hours
        </label>
        
        <div class="space-y-3">
            @for (int i = 0; i < 7; i++)
            {
                var dayName = System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetDayName((DayOfWeek)i);
                var camelDay = dayName.ToLower();

                <div class="flex items-center gap-4">
                    <label for="@camelDay" class="relative inline-block w-11 h-6 cursor-pointer">
                        <input asp-for="OpeningHours[@i].IsActive"
                               type="checkbox"
                               id="@camelDay"
                               class="peer sr-only" />

                        <span class="absolute inset-0 bg-gray-200 rounded-full transition-colors duration-200 ease-in-out peer-checked:bg-blue-600 peer-disabled:opacity-50 peer-disabled:pointer-events-none">
                                                </span>
                        <span class="absolute top-1/2 start-0.5 -translate-y-1/2 size-5 bg-white rounded-full shadow-xs transition-transform duration-200 ease-in-out peer-checked:translate-x-full">
                                                </span>
                    </label>
                    <label for="@camelDay" class="min-w-[80px] text-sm text-gray-700">@dayName</label>

                    <div class="max-w-32">
                        <input asp-for="OpeningHours[@i].From" type="time"
                               class="border py-1.5 sm:py-1 px-2 block w-full border-gray-200 rounded-lg sm:text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" />
                    </div>
                    
                    <span class="text-sm text-gray-500">to</span>

                    <div class="max-w-32">
                        <input asp-for="OpeningHours[@i].To" type="time"
                               class="border py-1.5 sm:py-1 px-2 block w-full border-gray-200 rounded-lg sm:text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>